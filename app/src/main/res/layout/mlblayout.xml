<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayoutmlb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_bb"
    android:clickable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">




        <AutoCompleteTextView
            android:id="@+id/searchtextbaseball"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:dropDownWidth="match_parent"
            android:ems="8"
            android:enabled="false"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/edittext_hint"
            android:inputType="text"
            android:padding="10dp"
            android:popupBackground="@drawable/back"
            android:textColor="@android:color/white"
            android:textColorHint="#8AFFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/baseball_icon_new" />

        <TextView
            android:id="@+id/textViewLinksCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/yellow" />

        <ProgressBar
            android:id="@+id/progressBarLoadStatus2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/swipe_instructions"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:checked="false"
            android:padding="10dp"
            android:text="@string/show"
            android:textColor="@android:color/black" />



</LinearLayout>