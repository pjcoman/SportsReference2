<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_fb"
    android:focusableInTouchMode="false"
    android:id="@+id/relativelayoutfb">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/imageView2"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true"
        android:background="@drawable/kbicon"
        android:layout_margin="5dp" />

    <AutoCompleteTextView
        android:id="@+id/searchtextfootball"
        android:layout_height="50dp"
        android:dropDownWidth="match_parent"
        android:ems="8"
        android:inputType="text"
        android:popupBackground="@null"
        android:textSize="20sp"
        android:layout_width="match_parent"

        android:background="@drawable/back"
        android:textColor="@android:color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|center_horizontal"
        android:textColorHint="@android:color/white"
        android:cursorVisible="true"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/clearsearchtext"/>

    <Button
        android:id="@+id/clearsearchtext"
        android:layout_height="40dp"

        android:textSize="30sp"
        android:layout_width="40dp"
        android:layout_alignParentRight="false"
        android:background="@drawable/clearx"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/imageView2"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"/>


</RelativeLayout>