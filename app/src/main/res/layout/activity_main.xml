<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/wallpaper"
              android:orientation="vertical"
              tools:context=".SRActivity"
    android:padding="2dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="2">

            <comapps.com.sportsreference2.CustomImageView
                android:id="@+id/button1"
                style="?android:attr/buttonBarStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/baseball_icon"
                android:visibility="visible" />

            <comapps.com.sportsreference2.CustomImageView
                android:id="@+id/button2"
                style="?android:attr/buttonBarStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/football_icon"
                android:visibility="visible"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="2">


            <comapps.com.sportsreference2.CustomImageView
                android:id="@+id/button3"
                style="?android:attr/buttonBarStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/hockey_icon"
                android:visibility="visible"/>

            <comapps.com.sportsreference2.CustomImageView
                android:id="@+id/button4"
                style="?android:attr/buttonBarStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/basketball_icon"
                android:visibility="visible"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="8dp"

        >


        <comapps.com.sportsreference2.CustomImageView
            android:id="@+id/button5"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/collegefootball_icon"
            android:visibility="visible"/>

        <comapps.com.sportsreference2.CustomImageView
            android:id="@+id/button6"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/collegebasketball_icon"
            android:visibility="visible"/>

        <comapps.com.sportsreference2.CustomImageView
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/olympicsreftitlebar"
            android:visibility="gone"/>


    </LinearLayout>

    <!--<Spinner
        android:id="@+id/spinnerHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:textAlignment="textEnd" />-->

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinnerHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>
