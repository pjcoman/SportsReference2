<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/textViewDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Characters for filter"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <CheckBox
        android:text="First Name (first blank)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxName"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:elevation="2dp" />

    <CheckBox
        android:id="@+id/checkBox1stLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:padding="10dp"
        android:text="Name (blank) First Letter Last Name"
        android:textColor="@android:color/black" />

</LinearLayout>